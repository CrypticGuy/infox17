<script type="text/javascript">
positioning={reached:false};
        var initialScrollPosition= $(window).scrollTop(),
        elementOffset = $('#content').offset().top+$('#content').height()/3,
        distance = (elementOffset - initialScrollPosition)-$(window).height();
        if(distance<=0)
        {
            if(positioning.reached==false)
            {
                positioning.reached=true;
                doAnimation();
            }
            console.log("We have reached");
        }
        $(window).scroll(function ()
        {
            var scrollExtent=$(window).scrollTop();
