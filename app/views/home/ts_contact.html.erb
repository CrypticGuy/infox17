<% content_for :pgstyles do %>
  <% stylesheet_link_tag "contact"%>
<% end %>

<% content_for :pgcontent do %>

    <div style="min-height:550px">
      <div class="container-fluid ">
      <br>
      <br>
        <div class="container">
          <div class="col s12 about-content">
          <div class="center"><a href="http://ipu.ac.in" target="_blank"><img src="/images/ipu-logo.png" class="ipu-logo" height="130px"></a><br><span class="julius">USICT, GGSIPU</span></div>

            <div class="row" style="margin:10px;padding: 10px;">

              <%= form_tag('/eventquery', method: "post" ,:class=>(" col s12 m4") ,:validate=>true , :onsubmit=>"alert('Your Query has been submitted.')"  ) do%>

                    <div class="row">
                      <div class="input-field col s12">
                          <i class="material-icons prefix orange-text text-darken-4">mail</i>
                          <%= email_field :user, :address ,:required=>true %><br>
                          <%= label_tag(:address, "Email") %>

                      </div>
                    </div>
 
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix orange-text text-darken-4">account_circle</i>
                            <%= text_field_tag :name, ""%><br>

                            <%= label_tag(:name, "Full Name") %>

                    </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12">
                          <i class="material-icons prefix orange-text text-darken-4">message</i>
                          <%= text_area_tag  :address, "",  :class => "input-query"%><br>
                          <%= label_tag(:address, "Query/Feedback") %>

                      </div>
                    </div>
                    <div class="row">
                      <div class="col s12 center-align">
                      <%= submit_tag 'Submit',:class=>("btn waves-effect waves-light btnsubmit")%>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col s12 center">
                        <i class="fa fa-phone" style="color: #ef6c00;" aria-hidden="true"></i> <font class="contact-us-heading" size="4px">+91-9968465876</font>
                      </div>
                      <div class="col s12 center">
                        <i class="fa fa-envelope" style="color: #ef6c00;" aria-hidden="true"></i><font size="4px" class="contact-us-heading">&nbsp;infox@ipu.ac.in</font>
                      </div>
                    </div>
                <%end%>
                <iframe class="col s12 m8" id="custom_id_form" frameborder="0" style="border:0;height:440px;margin-top:20px;" src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJ5fdrrq8aDTkRe3wa7eZKNBM&key=AIzaSyBLeCcBeDawX4JDrDve3r_r3zEBR3i9uxo" allowfullscreen></iframe>
            </div>
          </div>
        </div>
        <br>
      </div>
    </div>

<style type="text/css">
  text_area_tad{
    border: none;
    border-bottom: 1px solid #ccc;
  }

  .input-query {
    border :none;
    border-bottom: 1px solid #999;
  }

  .input-query:active {
    border: none;
  }

   .input-query:focus {
    outline: none;
  }

  label, input {
  font-family: 'Julius Sans One', sans-serif;
}
</style>
<% end %>


